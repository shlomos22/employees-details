{
  "productName": "DriverCalypsoIssuer",
  "appId": "com.isrtech",
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!.github",
    "!.vscode",
    "!.code-workspace",
    "!.npmrc",
    "!*.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!_config.yml",
    "!angular.json",
    "!tsconfig*.json",
    "!tslint.json",
    "!.eslintrc.json",
    "!karma.conf.js",
    "!angular.webpack.js",
    "!*.map",
    "main.js",
    "dist/**/*"
  ],
  "win": {
    "icon": "dist/assets/icons/icon.ico",
    "target": [
      "portable"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  },
  "portable": {
    "splashImage": "dist/assets/icons/splash.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
