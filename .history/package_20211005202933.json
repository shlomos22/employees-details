{
  "name": "DriveCalypsoIssuer",
  "version": "1.0.5",
  "description": "עמדת הנפקת כרטיסים",
  "homepage": "",
  "author": {
    "name": "ISRTech",
    "email": "arie@isrtech.co.il"
  },
  "keywords": [
    "angular",
    "angular 11",
    "electron",
    "nodejs",
    "typescript",
    "spectron",
    "eslint",
    "sass",
    "windows",
    "mac",
    "linux"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "start_4": "npm-run-all -p electron:serve ng:serve:4",
    "start_34": "npm-run-all -p electron:serve ng:serve:34",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "build:prod:4": "npm run build -- -c production4",
    "build:prod:34": "npm run build -- -c production34",
    "ng:serve": "ng serve -c",
    "ng:serve:4": "ng serve -c --configuration=operator4",
    "ng:serve:34": "ng serve -c --configuration=operator34",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build --publish=never",
    "electron:build:4": "npm run build:prod:4 && electron-builder build --publish=never",
    "electron:build:34": "npm run build:prod:34 && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "build": {
    "appId": "DriverCalypsoIssuer",
    "files": [
      "**/*",
      "!**/*.ts",
      "!.github",
      "!.vscode",
      "!.code-workspace",
      "!.npmrc",
      "!*.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!_config.yml",
      "!angular.json",
      "!tsconfig*.json",
      "!tslint.json",
      "!.eslintrc.json",
      "!karma.conf.js",
      "!angular.webpack.js",
      "!*.map",
      "main.js",
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "dist/assets/icons/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "installerIcon": "dist/assets/icons/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "splashImage": "dist/assets/icons/splash.bmp"
    }
  },
  "dependencies": {
    "@angular/animations": "5.2.11",
    "@capacitor/cli": "3.1.1",
    "@capacitor/core": "3.1.1",
    "@capacitor/electron": "2.4.8",
    "@capacitor/network": "1.0.2",
    "@electron/remote": "1.0.4",
    "@ionic-native/core": "5.32.1",
    "@ionic/angular": "^5.6.6",
    "@ionic/app-scripts": "^3.2.4",
    "@ionic/storage": "3.0.4",
    "@ionic/storage-angular": "3.0.6",
    "@ng-select/ng-select": "6.1.0",
    "cordova-sqlite-storage": "6.0.0",
    "dom-to-image": "2.6.0",
    "file-saver": "2.0.5",
    "moment": "2.29.1",
    "ngx-image-cropper": "3.3.5",
    "ngx-webcam": "0.3.2",
    "pcsclite": "1.0.0",
    "systeminformation": "5.6.17"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "11.1.1",
    "@angular-devkit/build-angular": "0.1102.7",
    "@angular-eslint/builder": "2.0.2",
    "@angular-eslint/eslint-plugin": "2.0.2",
    "@angular-eslint/eslint-plugin-template": "2.0.2",
    "@angular-eslint/schematics": "2.0.2",
    "@angular-eslint/template-parser": "2.0.2",
    "@angular/cli": "11.2.7",
    "@angular/common": "11.2.8",
    "@angular/compiler": "11.2.8",
    "@angular/compiler-cli": "11.2.8",
    "@angular/core": "11.2.8",
    "@angular/forms": "11.2.8",
    "@angular/language-service": "11.2.8",
    "@angular/platform-browser": "11.2.8",
    "@angular/platform-browser-dynamic": "11.2.8",
    "@angular/router": "11.2.8",
    "@ionic/angular-toolkit": "^3.1.1",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/file-saver": "2.0.2",
    "@types/jasmine": "3.6.7",
    "@types/jasminewd2": "2.0.8",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.35",
    "@types/ws": "7.4.6",
    "chai": "4.3.4",
    "conventional-changelog-cli": "2.1.1",
    "core-js": "3.6.5",
    "cross-env": "7.0.3",
    "electron": "12.0.2",
    "electron-builder": "22.10.5",
    "electron-rebuild": "2.3.5",
    "electron-reload": "1.5.0",
    "eslint": "7.22.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "31.6.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jasmine-core": "3.7.1",
    "jasmine-spec-reporter": "6.0.0",
    "karma": "6.2.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "6.3.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "mocha": "8.3.2",
    "nan": "2.14.2",
    "npm-run-all": "4.1.5",
    "rxjs": "6.6.6",
    "spectron": "14.0.0",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "tslint": "~6.1.3",
    "typescript": "4.0.5",
    "wait-on": "5.0.1",
    "webdriver-manager": "12.1.8",
    "zone.js": "0.10.3"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "browserslist": [
    "chrome 83"
  ],
  "optionalDependencies": {}
}
